<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xgw.mybaselibproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AppConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RecyclerTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WebViewTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FragmentTabTestActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".FragmentCustomTabTestActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".LazyLoadFragmentTabTestActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".RoundViewShapeTestActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".DownloadTestActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".UploadTestActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>