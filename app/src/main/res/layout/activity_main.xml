<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.xgw.mybaselibproject.MainActivity">

    <include layout="@layout/toolbar" />

    <Button
        android:id="@+id/global_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我拉取数据（全局配置）" />

    <Button
        android:id="@+id/single_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我拉取数据（单个请求1）" />

    <Button
        android:id="@+id/single_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我拉取数据（单个请求2）" />

    <Button
        android:id="@+id/recycler_activity_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通用列表activity示例" />

    <Button
        android:id="@+id/webview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通用webview activity示例" />

    <Button
        android:id="@+id/fragment_pager_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通用fragmentactivity示例" />

    <Button
        android:id="@+id/fragment_custom_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通用自定义布局fragmentactivity示例" />

    <Button
        android:id="@+id/lazy_load_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="懒加载fragment示例" />
</LinearLayout>
