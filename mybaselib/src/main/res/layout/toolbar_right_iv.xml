<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--
        阴影控制
        app:elevation="@dimen/space_0"
        -->
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:colorControlNormal="@android:color/black"
            app:elevation="0dp">

            <!--
                app:layout_scrollFlags="scroll|snap|enterAlways"
                scroll单独使用，会出现toolbar停留在动画中间的效果，不是很好
                配合snap使用可以解决这个问题-->

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                app:contentInsetStart="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <com.xgw.mybaselib.widget.roundview.view.RoundViewTextView
                    android:id="@+id/toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawablePadding="3dp"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/toolbar_back"
                    android:textSize="18sp"
                    android:visibility="gone"
                    app:rv_backgroundColor="@color/transparent"
                    app:rv_backgroundColorPressed="@color/black_alpha_112"
                    app:rv_drawableLeft="@drawable/ic_toolbar_back"
                    app:rv_isRippleEnable="true" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tag="skin:toolbar_tv:textColor"
                    android:textColor="@color/toolbar_tv"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp" />
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

    </LinearLayout>

</merge>